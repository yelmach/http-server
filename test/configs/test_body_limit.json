{
  "name": "http-server-body-limit-test",
  "version": "1.0.0",
  "servers": [
    {
      "host": "127.0.0.1",
      "ports": [8080],
      "serverName": "localhost",
      "defaultServer": true,
      "maxBodySize": 1024,
      "routes": [
        {
          "path": "/",
          "methods": ["GET"],
          "root": "./www",
          "index": "index.html"
        },
        {
          "path": "/upload",
          "methods": ["POST"],
          "root": "./www/uploads"
        }
      ]
    }
  ]
}
