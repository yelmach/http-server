{
  "name": "http-server",
  "version": "1.0.0",
  "servers": [
    {
      "host": "127.0.0.1",
      "ports": [8080],
      "serverName": "localhost",
      "defaultServer": true,
      "maxBodySize": 104857600,
      "routes": [
        {
          "path": "/",
          "methods": ["GET", "DELETE", "POST"],
          "root": "./www",
          "index": "index.html"
        },
        {
          "path": "/images",
          "methods": ["GET"],
          "root": "./www/images",
          "directoryListing": true
        },
        {
          "path": "/cgi-1",
          "root": "./scripts/cgi-1.py",
          "methods": ["GET"],
          "cgiExtension": "py"
        },
        {
          "path": "/cgi-2",
          "root": "./scripts/cgi-2.py",
          "methods": ["GET"],
          "cgiExtension": "py"
        },
        {
          "path": "/cgi-3",
          "root": "./scripts/cgi-3.py",
          "methods": ["GET", "POST"],
          "cgiExtension": "py"
        },
        {
          "path": "/old-page",
          "redirectTo": "/",
          "redirectStatusCode": 301
        },
        {
          "path": "/temp-redirect",
          "redirectTo": "/",
          "redirectStatusCode": 302
        },
        {
          "path": "/uploads",
          "methods": ["POST"],
          "root": "./www/uploads"
        },
        {
          "path": "/session",
          "methods": ["GET"],
          "root": "./www"
        }
      ]
    },
    {
      "host": "127.0.0.1",
      "ports": [8081],
      "serverName": "localhost",
      "maxBodySize": 104857600,
      "routes": [
        {
          "path": "/",
          "methods": ["GET", "POST", "DELETE"],
          "root": "./www",
          "index": "index.html"
        }
      ]
    }
  ]
}
